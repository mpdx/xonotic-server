# Hetzner Cloud
HETZNER_SSH_KEY=my-key          # SSH key in Hetzner (from: hcloud ssh-key list)
HETZNER_SERVER_TYPE=cx11        # Server type (cx11, cx21, etc.)
HETZNER_LOCATION=nbg1           # Location (nbg1, fsn1, hel1)
HETZNER_IMAGE=debian-12

# Repo location
GIT_REPO_URL=https://github.com/yourusername/xonotic-server.git

# Cloudflare DNS
CLOUDFLARE_API_TOKEN=your_cloudflare_token        # from https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_ZONE_ID=your_zone_id                   # from domain dashboard page 
DOMAIN=xonotic.example.com
DNS_TTL=120

# Xonotic Settings
SERVER_HOSTNAME=My Awesome Xonotic Server
RCON_PASSWORD=changeme123
MAX_PLAYERS=16
GAME_PORT=26000
MAP_SERVER_URL=http://xonotic.example.com:8080/maps/
